{
    "name": "cms/auth-skeleton-pdo",
    "description": "PHP MVC auth skeleton with PDO, dynamic base, CSRF, middleware, auto-migration, HR collation, and literal-string i18n (_t).",
    "type": "project",
    "require": {
      "php": ">=8.4",
      "ext-pdo": "*",
      "ext-openssl": "*",
      "phpmailer/phpmailer": "^6.9",
      "ext-mbstring": "*",
      "ext-ctype": "*",
      "ext-intl": "*",
      "twbs/bootstrap": "^v5.3",
      "twbs/bootstrap-icons": "^v1.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "cp -R vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js* public/js/",
            "cp -R vendor/twbs/bootstrap/dist/css/bootstrap.min.css* public/css/",
            "cp -R vendor/twbs/bootstrap-icons/font/bootstrap-icons.css public/css/",
            "cp -R vendor/twbs/bootstrap-icons/font/fonts/* public/css/fonts"
        ],
        "post-update-cmd": [
            "cp -R vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js* public/js/",
            "cp -R vendor/twbs/bootstrap/dist/css/bootstrap.min.css* public/css/",
            "cp -R vendor/twbs/bootstrap-icons/font/bootstrap-icons.css public/css/",
            "cp -R vendor/twbs/bootstrap-icons/font/fonts/* public/css/fonts"
        ]
    }
}
